<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="2" verbose="1" name="SampleTest Suite" annotations="JDK" parallel="classes" preserve-order="true">
    
	<listeners>
	    <listener class-name="listener.TestListener"></listener>
	</listeners>


	<test name="LoginModule">
		<parameter name="browserType" value="firefox" />
		<parameter name="browserVersion" value="62" />
		<parameter name="OS-Name" value="windows" />
		<parameter name="OS-Version" value="10" />
		<parameter name="Session" value="Testing" />
		<classes>
			<class name="tests.AccountpageTests"/>
		</classes>
	</test>

    <test name="Registration">
        <parameter name="browserType" value="IE" />
        <parameter name="browserVersion" value="69" />
        <parameter name="OS-Name" value="windows" />
        <parameter name="OS-Version" value="10" />
        <parameter name="Session" value="Testing" />
        <classes>
            <class name="tests.RegistrationTests"/>
        </classes>
    </test>


    <test name="ProductSearch">
		<parameter name="browserType" value="chrome" />
		<parameter name="browserVersion" value="69" />
		<parameter name="OS-Name" value="windows" />
		<parameter name="OS-Version" value="10" />
		<parameter name="Session" value="Testing" />
		<classes>
			<class name="tests.Opencart_ProductSearchTests"/>
		</classes>
	</test>

</suite>